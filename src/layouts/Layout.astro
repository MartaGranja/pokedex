---
interface Props {
	title: string;
}

const { title } = Astro.props;


---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<header class="bg-gray-800 rounded-full p-5 mb-5"
		bg-cover style="background-image:  url('https://i.redd.it/5fpe2w8uqti81.png'); height: 200px">
		<img class="m-auto w-96 p-5" src="../img/logo.png">
	</header>
	
	<body class="p-10">
		<slot />
		<style>
			body {
			padding: 20px;
			background-color: rgb(135, 182, 225);
			}

						
		</style>
	</body>
</html>

